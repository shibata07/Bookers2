<div class="container" >

  <div class= "row" >

<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<div class="col-xs-3">
<%= render 'users/user_info', user: @user, book: @book %>
</div>
<div class="col-xs-9">
<h1>Books</h1>
<table class="table">

  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 60,60, fallback: "noimage.jpg",size:"60x60" %>
        <% end %>
    </td>

    <td><%= link_to book_path(book.id) do %>
      <%= book.title %>
        <% end %>
    </td>

    <td><%= book.body %></td>
  </tr>
<% end %>

</table>
</div>

</div>

</div>